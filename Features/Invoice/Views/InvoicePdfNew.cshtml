                            {
                                <p>@Model.BillingAddress.Name</p>
                            }
                            @if (!String.IsNullOrWhiteSpace(Model.BillingAddress.Address1))
                            {
                                <p>@Model.BillingAddress.Address1</p>

                                
                            }
                            @if (!String.IsNullOrWhiteSpace(Model.BillingAddress.Address2))
                            {
                                <p>@Model.BillingAddress.Address2</p>

                                
                            }
                            @if (!String.IsNullOrWhiteSpace(Model.BillingAddress.Address3))
                            {
                                <p>@Model.BillingAddress.Address3</p>

                                
                            }
                            <p>@Model.BillingAddress.City, @Model.BillingAddress.State @Model.BillingAddress.ZipPostalCode</p>
                            @if (!String.IsNullOrWhiteSpace(Model.CustomerVatNumber))
                            {
                                <p>Customer VAT #: @Model.CustomerVatNumber</p>
                            }
                        </div>


                    </div>
                </div>
