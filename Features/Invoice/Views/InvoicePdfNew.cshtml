            <div class="row-ìnformation ">
                <div class="card2">
                    <div class="card-header">
                        <p>Information</p>
                    </div>
                    <div class="card2-content">
                        <div class="card-item row-center-between">
                            <p class="label-normal" style="min-width: 150px">Sales Order #@Model.Id</p>
                            <p class="label-normal">#@Model.Id</p>
                        </div>
                        <div class="card-item row-center-between">
                            <p class="label-normal" style="min-width: 150px">Invoice Date</p>
                            <p class="label-normal">@Convert.ToDateTime(Model.CreatedAt).ToString("d")</p>
                        </div>
                        @if (Model.DateDue.HasValue)
                        {
                            <div class="card-item row-center-between">
                                <p class="label-normal" style="min-width: 150px">Due Date</p>
                                <p class="label-normal">@Convert.ToDateTime(Model.DateDue).ToString("d")</p>
                            </div>
                        }
                        
                        @if (!String.IsNullOrEmpty(Model.CustomerPurchaseOrderNumber))
                        {
                            <div class="card-item row-center-between">
                                <p class="label-normal" style="min-width: 150px">Customer PO #</p>
                                <p class="label-normal">@Model.CustomerPurchaseOrderNumber</p>
                            </div>

                        }
                        @if (Model.ShippingCarrier != null && Model.ShippingCarrierShippingMethod != null)
                        {
                            <div class="card-item row-center-between">
                                <p class="label-normal" style="min-width: 150px">Shipping Method</p>
                                <p class="label-normal">@Model.ShippingCarrier.Name @Model.ShippingCarrierShippingMethod.Name</p>
                            </div>
                        }

                        @{
                            var trackingNumbers = new List<string> { };
                            if (Model.SalesOrder != null)
                            {
                                Model.SalesOrder.OutgoingShipments.ForEach(outgoingShipment =>
                                {
                                    outgoingShipment.OutgoingShipment.Boxes.ForEach(box =>
                                            {
                                                var trackingNumber = "";
                                                if (outgoingShipment.OutgoingShipment.ShippingCarrier != null)
                                                    trackingNumber = box.TrackingNumber;
                                                else
                                                    trackingNumber = box.TrackingNumber;
                                                trackingNumbers.Add(trackingNumber);
                                            });
                                });
                            }
                            var trackingNumbersLabel = "Tracking Number";
                            if (trackingNumbers.Count > 1)
                            {
                                trackingNumbersLabel += "s";
                            }
                        }
                        @if (trackingNumbers.Count > 0)
                        {
                            <div class="card-item row-center-between">
                                <p class="label-normal" style="min-width: 150px">@trackingNumbersLabel</p>
                                <p class="label-normal">@string.Join(", ", trackingNumbers)</p>
                            </div>
                        }

                        @if (Model.PaymentTerm != null)
                        {
                            <div class="card-item row-center-between">
                                <p class="label-normal" style="min-width: 150px">Payment Terms</p>
                                <p class="label-normal">@Model.PaymentTerm.Name</p>
                            </div>
                        }
                    </div>
                </div>
